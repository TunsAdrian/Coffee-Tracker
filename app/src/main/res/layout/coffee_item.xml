<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trip_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <RelativeLayout

        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/itemCoffee_rating_checked"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="8dp"
            android:background="@drawable/ic_star_border_black_24dp" />

        <TextView
            android:id="@+id/itemCoffee_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/item_productivity_level"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemCoffee_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemCoffee_rating"
            android:layout_alignParentStart="true"
            android:text="@string/item_coffee_type"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemCoffee_caffeine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemCoffee_type"
            android:layout_alignParentStart="true"
            android:text="@string/item_caffeine"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemCoffee_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemCoffee_caffeine"
            android:layout_alignParentStart="true"
            android:text="@string/item_date"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>